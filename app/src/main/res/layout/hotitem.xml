<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/correlation_circleImageView"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="24dp"
    android:background="@drawable/register_touxiang"
    android:src="@drawable/qiche"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

<TextView
    android:id="@+id/correlation_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="24dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="@+id/barrier5"
    app:layout_constraintStart_toEndOf="@+id/correlation_circleImageView"
    app:layout_constraintTop_toTopOf="@+id/correlation_circleImageView" />

<TextView
    android:id="@+id/correlation_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="TextView"
    app:layout_constraintStart_toStartOf="@+id/correlation_name"
    app:layout_constraintTop_toBottomOf="@+id/correlation_name" />

<TextView
    android:id="@+id/correlation_ping"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="25dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/correlation_time"
    app:layout_constraintTop_toBottomOf="@+id/correlation_time" />

<ImageView
    android:id="@+id/correlation_head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/correlation_time"
    app:layout_constraintEnd_toStartOf="@+id/textView7"
    app:layout_constraintTop_toTopOf="@+id/correlation_circleImageView"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/bew_praise_comment" />


<View
    android:id="@+id/view8"
    style="@style/Firstga.split_line_horizontal"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/correlation_ping"></View>

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="90"
    app:layout_constraintBottom_toBottomOf="@+id/correlation_head"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/correlation_head"
    app:layout_constraintVertical_bias="0.0" />

<android.support.constraint.Barrier
    android:id="@+id/barrier5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:barrierDirection="left"
    app:constraint_referenced_ids="correlation_head,textView7"
    tools:layout_editor_absoluteX="384dp" />
</android.support.constraint.ConstraintLayout>