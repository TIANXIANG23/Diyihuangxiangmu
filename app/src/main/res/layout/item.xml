<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itm_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/itm_image"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itm_image" />

    <ImageView
        android:id="@+id/itm_image"
        android:layout_width="125dp"
        android:layout_height="96dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zhanwei" />

    <ImageView
        android:id="@+id/itm_zhiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/itm_title"
        app:layout_constraintTop_toTopOf="@+id/barrier3"
        app:srcCompat="@drawable/news_top" />


    <TextView
        android:id="@+id/itm_xin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="新华网"
        android:textColor="#a4a4a4"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/itm_zhiding"
        app:layout_constraintStart_toEndOf="@+id/itm_zhiding"
        app:layout_constraintTop_toTopOf="@+id/itm_zhiding" />

    <TextView
        android:id="@+id/itm_gentie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="0跟帖"
        android:textColor="#a4a4a4"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/itm_xin"
        app:layout_constraintStart_toEndOf="@+id/itm_xin" />

    <TextView
        android:id="@+id/itm_shijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="7分钟前"
        android:textColor="#a4a4a4"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/itm_gentie"
        app:layout_constraintStart_toEndOf="@+id/itm_gentie"
        app:layout_constraintTop_toTopOf="@+id/itm_gentie" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="itm_title,itm_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itm_gentie" />

    <ImageView
        android:id="@+id/itm_cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/itm_shijian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itm_shijian"
        app:srcCompat="@drawable/news_x" />

</android.support.constraint.ConstraintLayout>
